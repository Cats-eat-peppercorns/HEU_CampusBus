<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.User_Driver_Fragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:background="@drawable/background_driver2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="105dp"
            android:layout_height="112dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/driver_page" />

        <LinearLayout
            android:layout_width="177dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/driver_name_text"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="90dp"
                android:gravity="end"
                android:textColor="#000"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/driver_account_text"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/driver_school_text"
                android:layout_width="130dp"
                android:layout_height="34dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/driver_line_text"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:textColor="#000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/change_self_information"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="62dp"
                android:layout_height="56dp"
                android:layout_marginStart="17dp"
                android:background="@drawable/modify_icon" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_driver"
                android:text="修改信息"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/password_image"
        android:layout_width="367dp"
        android:layout_height="173dp"
        android:layout_gravity="center"
        android:background="@drawable/card" />
    <LinearLayout android:layout_width="match_parent" android:layout_height="159dp" android:layout_marginTop="0dp" android:orientation="horizontal" android:background="@drawable/background_driver2">
        <LinearLayout android:layout_width="261dp" android:layout_height="match_parent" android:layout_marginStart="30dp" android:orientation="vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="50dp" android:layout_marginTop="20dp" android:text="显示地图地理标识" android:textSize="25sp" android:textColor="#778899"/>
            <TextView android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginStart="50dp" android:layout_marginTop="20dp" android:text="显示地图建筑物" android:textSize="25sp" android:textColor="#778899"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="vertical">
            <CheckBox android:id="@+id/show_map_text" android:layout_width="33dp" android:layout_height="32dp" android:layout_marginTop="25dp" android:textSize="30sp"/>
            <CheckBox android:id="@+id/show_map_build" android:layout_width="33dp" android:layout_height="32dp" android:layout_marginTop="25dp" android:textSize="30sp"/>
        </LinearLayout>
    </LinearLayout>
    <Button android:id="@+id/set_map" android:layout_width="match_parent" android:layout_height="59dp" android:layout_marginTop="0dp" android:text="设置地图模式" android:textSize="25sp" android:background="@drawable/background_driver_3"/>
</LinearLayout>