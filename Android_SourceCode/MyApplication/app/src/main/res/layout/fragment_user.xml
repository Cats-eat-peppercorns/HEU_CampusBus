<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0e0e6">



    <ImageView
        android:id="@+id/modify_information_image"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/modify_icon"
        app:layout_constraintEnd_toEndOf="@+id/modify_information_iv"
        app:layout_constraintStart_toStartOf="@+id/modify_information_iv"
        app:layout_constraintTop_toTopOf="@+id/modify_information_iv" />



    <TextView
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:text="修改资料"
        android:textSize="15dp"
        android:textColor="#000"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/modify_information_image"
        app:layout_constraintStart_toStartOf="@+id/modify_information_image"
        app:layout_constraintTop_toBottomOf="@+id/modify_information_image" />


    <ImageView
        android:id="@+id/modify_information_iv"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/avatar_iv"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/user_icon"
        app:layout_constraintBottom_toTopOf="@+id/divider_image2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.428" />


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/avatar_iv">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="名称:"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="我是名称我是名称"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/avatar_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="账号:"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/account_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="01010101010101"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/divider_image2">

        <TextView
            android:id="@+id/card_text"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:text="我的公交卡"
            android:textColor="#000"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="@+id/password_iv"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/password_iv"
            app:layout_constraintTop_toBottomOf="@+id/divider_image2" />

        <ImageView
            android:id="@+id/password_iv"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/card" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toTopOf="@+id/exitaccount_bt"
            tools:layout_editor_absoluteX="-16dp" />

        <Button
            android:id="@+id/setting_bt"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#b0e0e6"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="设置"
            android:textColor="#000"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/white"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/exitaccount_bt"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#b0e0e6"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="退出账号"
            android:textColor="#000"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/white" />
    </LinearLayout>

    <ImageView
        android:id="@+id/divider_image2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.201" />
</androidx.constraintlayout.widget.ConstraintLayout>