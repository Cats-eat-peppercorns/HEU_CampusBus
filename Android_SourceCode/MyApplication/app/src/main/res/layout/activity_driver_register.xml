<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.DriverRegisterActivity">
    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.167">
    <EditText
        android:id="@+id/name_driverregister_et"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:hint="名称"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/text_bg" />

    <EditText
        android:id="@+id/account_driverregister_et"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:hint="账号"
        android:layout_marginTop="24dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/text_bg" />


    <EditText
        android:id="@+id/password_driverregister_et"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:hint="密码"
        android:layout_marginTop="24dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/text_bg" />

    <EditText
        android:id="@+id/school_driverregister_et"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:hint="学校"
        android:layout_marginTop="24dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/text_bg" />

    <EditText
        android:id="@+id/line_driverregister_et"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:hint="行车路线"
        android:layout_marginTop="24dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/text_bg" />

    <EditText
        android:id="@+id/phone_driverregister_et"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:hint="手机号码"
        android:layout_marginTop="24dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/text_bg" />
    </LinearLayout>

    <Button
        android:id="@+id/submit_driver_register_btn"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/background_return2"
        android:hint="注册"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".8"
        app:layout_constraintWidth_percent=".8" />

</androidx.constraintlayout.widget.ConstraintLayout>